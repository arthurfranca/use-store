{
  "name": "@kwhitley/use-store",
  "version": "1.0.7",
  "description": "Super simple useStore() hook for React, mirroring useState() while allowing persistence",
  "keywords": [
    "react",
    "hooks",
    "store",
    "useState",
    "useStore",
    "localStorage",
    "persist"
  ],
  "main": "index.js",
  "target": "esnext",
  "scripts": {
    "prebuild": "rm -rf build",
    "build": "babel src --ignore '**/*.spec.js' --out-dir build -d",
    "release:major": "yarn build && release --major --src=build --push",
    "release:minor": "yarn build && release --minor --src=build --push",
    "release:patch": "yarn build && release --patch --src=build --push"
  },
  "author": "Kevin R. Whitley <krwhitley@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kwhitley/use-store.git"
  },
  "bugs": {
    "url": "https://github.com/kwhitley/use-store/issues",
    "email": "support@arundo.com"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.4.0",
    "@babel/plugin-proposal-class-properties": "^7.4.0",
    "@babel/plugin-transform-modules-commonjs": "^7.4.0",
    "@babel/preset-env": "^7.4.2",
    "@kwhitley/yarn-release": "^1.4.0"
  },
  "peerDependencies": {
    "react": "^16.8.0"
  }
}
